<mujoco model='cartpole'>

    <compiler inertiafromgeom='true'/>
    
    <default>
		<joint armature="0" damping="1"/>
		<geom contype="0" friction="1 0.1 0.1" />
		<tendon/>
		<motor ctrlrange="-10 10"/>
	</default>

	<option gravity="0 0 -9.81" timestep="0.02" />

    <size nstack="3000"/>
    
    <custom>
		<!-- brax custom params -->
        <numeric data="10000" name="constraint_stiffness"/>
		<numeric data="10000" name="constraint_limit_stiffness"/>
		<numeric data="0" name="spring_mass_scale"/>
		<numeric data="1" name="spring_inertia_scale"/>
	</custom>

    <worldbody>
        <body name='cart' pos='0 0 0'>
            <joint name='slider' type='slide' limited='true' pos='0 0 0' axis='1 0 0' range='-2.4 2.4' damping='0.05'/>
            <geom name='cart_geom' type='box' pos='0 0 0' size='0.2 0.1 0.05'/>
            <body name='pole' pos='0 0 0'>
                <joint name='revolute_joint' type='hinge' axis='0 1 0' damping='0.05'/>
                <geom name='pole_geom' type='capsule' pos='0 0 -0.2' size='0.05 0.1'/>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name='slide' joint='slider' gear='100 0 0 0 0 0' ctrllimited='true' ctrlrange='-10 10'/>
    </actuator>

</mujoco>